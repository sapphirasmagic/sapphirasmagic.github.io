        // Enhanced magical background system
        function createCosmicBackground() {
            const starField = document.getElementById('starField');
            
            // Create twinkling stars
            for (let i = 0; i < 120; i++) {
                const star = document.createElement('div');
                star.className = 'star';
                star.style.left = Math.random() * 100 + '%';
                star.style.top = Math.random() * 100 + '%';
                star.style.width = star.style.height = (Math.random() * 4 + 1) + 'px';
                star.style.animationDelay = Math.random() * 4 + 's';
                star.style.animationDuration = (Math.random() * 3 + 3) + 's';
                starField.appendChild(star);
            }
            
            // Create shooting stars
            for (let i = 0; i < 5; i++) {
                const shootingStar = document.createElement('div');
                shootingStar.className = 'shooting-star';
                shootingStar.style.top = Math.random() * 60 + '%';
                shootingStar.style.animationDelay = (Math.random() * 15 + 5) + 's';
                shootingStar.style.animationDuration = (Math.random() * 3 + 3) + 's';
                starField.appendChild(shootingStar);
            }
            
            // Create floating magic orbs
            for (let i = 0; i < 25; i++) {
                const orb = document.createElement('div');
                orb.className = 'magic-orb';
                orb.style.left = Math.random() * 100 + '%';
                orb.style.top = Math.random() * 100 + '%';
                orb.style.animationDelay = Math.random() * 12 + 's';
                orb.style.animationDuration = (Math.random() * 6 + 8) + 's';
                starField.appendChild(orb);
            }
        }

